{
  "name": "tutorfinder",
  "version": "1.0.0",
  "description": "Find tutors",
  "main": "server.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "dependencies": {
    "browserify": "^10.2.4",
    "flux": "^2.0.3",
    "jquery": "^2.1.4",
    "keymirror": "^0.1.1",
    "lodash": "^3.9.3",
    "moment": "^2.10.3",
    "node-static": "^0.7.6",
    "node-uuid": "^1.4.3",
    "object-assign": "^3.0.0",
    "react": "^0.13.3",
    "react-bootstrap": "^0.23.2",
    "react-grid-layout": "^0.8.3",
    "react-zeroclipboard": "^1.1.0",
    "reactify": "^1.1.1",
    "socket.io": "^1.3.5",
    "socket.io-client": "^1.3.5",
    "vanilla-masker": "^1.0.9"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.15",
    "bower": "^1.4.1",
    "eslint": "^0.22.1",
    "eslint-plugin-react": "^2.5.0"
  },
  "scripts": {
    "postinstall": "npm run version && npm run bower && npm run gulpBuild",
    "version": "node -v",
    "bower": "bower install --config.interactive=false",
    "gulpBuild": "cd gulp && npm install",
    "rebuildSass": "cd gulp/ && cd node_modules/gulp-sass/ && npm uninstall node-sass && npm install node-sass",
    "build": "cd gulp && NODE_ENV=development && gulp",
    "start": "node server",
    "production": "cd gulp && NODE_ENV=production && gulp production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thewillhuang/teacherfinder.web"
  }
}
